\defbeamertemplate*{title page}{ubb}[1][]
{
  \vbox{}
  \vfill
  \begingroup
    \centering
    \vskip1em
    \begin{beamercolorbox}[sep=4pt,center,#1,rounded=true]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip0.25em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
      \usebeamerfont{author}\insertauthor\par
      \vskip1em%
      {\usebeamerfont{data}Profesor Patrocinante\par}
      \usebeamerfont{author}\advisor\par
      \vskip1em%
      {\usebeamerfont{data}Comision Evaluadora\par}
      \usebeamerfont{author}\committee
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=4pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    
    \vfill
    \begin{beamercolorbox}[center,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \endgroup
  \vfill
}
